#:import Factory kivy.factory.Factory

<SetFolderPopup>:
    size_hint: 0.7, 0.8
    pos_hint: {"x": 0.15, "y": 0.05}

    FloatLayout:
        FileChooserListView:
            id: filechooser
            size_hint: 0.95, 0.7
            pos_hint: {"x": 0.025, "y": 0.25}
            font_name: FONT_NAME

        DefaultLayout:
            orientation: "horizontal"
            size_hint: 0.9, 0.17
            pos_hint: {"x": 0.05, "y": 0.05}

            DefaultButton:
                text: "ANNULLA"
                bold: True
                font_size_scale: 0.6
                on_press:
                    root.dismiss()

            DefaultButton:
                text: "CAMBIA UNITà DI MEMORIA".upper()
                bold: True
                font_size_scale: 0.4
                on_press:
                    root.open_drive_popup()

            DefaultButton:
                text: "SELEZIONA"
                bold: True
                font_size_scale: 0.5
                on_press:
                    root.set_path()

<SetDrivePopup>:
    size_hint: [0.3, 0.4]
    pos_hint: {"x": 0.35, "y": 0.3}

    FloatLayout:
        ButtonDynamicInputLayout:
            id: drive_layout
            size_hint: 0.5, 0.75
            pos_hint: {"x": 0.25, "y": 0.2}

        DefaultButton:
            text: "ANNULLA"
            bold: True
            font_size_scale: 0.6
            size_hint: 0.8, 0.15
            pos_hint: {"x": 0.1, "y": 0.05}
            on_press:
                root.dismiss()


<AnalyzerPopup>:
    size_hint: 0.37, 0.6
    pos_hint: {"x": 0.315, "y": 0.2}

    FloatLayout:
        DefaultLabel:
            text: "ANALISI\nTERMINATA"
            bold: True
            size_hint: 0.9, 0.255
            pos_hint: {"x": 0.05, "y": 0.72}
            font_size_scale: 0.7

        DefaultButton:
            text: "APRI MODIFICHE"
            bold: True
            size_hint: 0.9, 0.2
            pos_hint: {"x": 0.05, "y": 0.5}
            font_size_scale: 0.55
            on_press:
                app.inspect_compare_file()

        DefaultButton:
            text: "CHIUDI"
            bold: True
            size_hint: 0.9, 0.2
            pos_hint: {"x": 0.05, "y": 0.05}
            font_size_scale: 0.6

            on_press:
                root.dismiss()


<TransferingPopup>:
    auto_dismiss: False
    size_hint: 0.8, 0.45
    pos_hint: {"x": 0.1, "y": 0.325}

    FloatLayout:
        MyDefaultLabel:
            id: display_label
            text: "TRASFERIMENTO IN CORSO ..."  # display_action_popup.current_action
            italic: True
            font_size: FONT_SIZE * 1.51
            pos_hint: {"x": 0, "y": 0}

<TransferPopup>:
    size_hint: 0.35, 0.4
    pos_hint: {"x": 0.325, "y": 0.3}

    FloatLayout:
        MyDefaultLabel:
            text: "TRASFERIMENTO TERMINATO"
            bold: True
            font_size: FONT_SIZE * 0.55
            size_hint: 0.9, 0.55
            pos_hint: {"x": 0.05, "y": 0.4}

        MyDefaultButton:
            text: "CHIUDI"
            bold: True
            size_hint: 0.9, 0.3
            pos_hint: {"x": 0.05, "y": 0.05}

            on_press:
                root.dismiss()


<ErrorPopup>:
    auto_dismiss: False
    size_hint: 0.4, 0.45
    pos_hint: {"x": 0.3, "y": 0.275}

    DefaultLayout:
        size_hint: 0.85, 0.9
        pos_hint: {"x": 0.075, "y": 0.05}

        DefaultLabel:
            text: "ERRORE"
            bold: True
            color: WHITE_RGBA
            background_color: RED_RGBA
            size_hint_y: 0.25
            font_size_scale: 0.7

        DefaultLabel:
            text: root.error_text
            italic: True
            color: WHITE_RGBA
            background_color: RED_RGBA
            size_hint_y: 0.55
            font_size_scale: 0.3

        DefaultButton:
            text: "CHIUDI"
            bold: True
            font_size_scale: 0.7
            size_hint_y: 0.2

            on_press:
                root.dismiss()


<InfoPopup>:
    size_hint: 0.6, 0.6
    pos_hint: {"x": 0.2, "y": 0.2}

    DefaultLabel:
        text: "[b]FileTransfer[/b]: programma che allinea una cartella con una sua versione più aggiornata; devono essere scelte SRC e DST:\n[b]-SRC[/b]: cartella più aggiornata, verrà usata come indicazione\n[b]-DST[/b]: cartella da aggiornare, qui verranno inserite tutte le modifiche\n\nI file presenti allo stesso percorso sia in SRC sia in DST verranno sovrascritti se hanno dimensione diversa, copiati se non sono presenti in SRC, inoltre tutte le cartelle in SRC ma non in DST vengono create con il loro relativo contenuto, file e cartelle (compreso il loro contenuto) in DST ma non in SRC verranno eliminati."
        font_size: FONT_SIZE * 0.45
        valign: "top"
        halign: "left"
        markup: True